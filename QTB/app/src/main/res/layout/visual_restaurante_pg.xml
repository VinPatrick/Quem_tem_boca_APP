<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurante_Pg">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="430dp"
        android:layout_height="165dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="436dp"
        android:layout_height="33dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_background"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="75dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="445dp"
        android:layout_height="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_background" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="376dp"
        android:layout_height="621dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <TextView
        android:id="@+id/Nome_Restaurante_label"
        android:layout_width="283dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Nome do Restaurante"
        android:textColor="#FFFFFF"
        android:textColorLink="#000000"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bt_Pedidos_Restaurante"
        android:layout_width="59dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="13dp"
        android:textSize="18sp"
        app:icon="@android:drawable/stat_notify_chat"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/Bt_adicionar_produto"
        app:layout_constraintEnd_toEndOf="@+id/Bt_adicionar_produto"
        app:layout_constraintStart_toStartOf="@+id/Bt_adicionar_produto" />

    <Button
        android:id="@+id/Bt_volta_home_restaurante"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_delete"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Bt_adicionar_produto"
        android:layout_width="85dp"
        android:layout_height="92dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="76dp"
        android:paddingStart="13dp"
        app:icon="@android:drawable/ic_input_add"
        app:iconSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Menu"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

</androidx.constraintlayout.widget.ConstraintLayout>